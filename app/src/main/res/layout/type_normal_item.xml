<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_marigin"
            android:layout_marginTop="@dimen/list_marigin"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:lines="3"
            android:textSize="@dimen/news_title" />

        <ImageView
            android:id="@+id/iv_news_pic"
            android:layout_width="@dimen/middle_loadpic_width"
            android:layout_height="@dimen/middle_loadpic_height"
            android:layout_gravity="right"
            android:src="@drawable/big_loadpic_empty_listpage" />
    </LinearLayout>

    <include layout="@layout/type_item_common" />

</LinearLayout>