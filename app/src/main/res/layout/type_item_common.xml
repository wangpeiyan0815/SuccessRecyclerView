<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_news_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lv_topic_red"
        android:text="置顶"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_news_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_marigin"
        android:layout_toRightOf="@id/tv_news_type"
        android:text="专题" />

    <TextView
        android:id="@+id/tv_news_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_marigin"
        android:layout_toRightOf="@id/tv_news_source"
        android:text="评论" />

    <ImageView
        android:id="@+id/iv_news_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:src="@drawable/add_textpage_normal" />

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/list_marigin"
        android:layout_toLeftOf="@id/iv_news_delete"
        android:text="7分钟前" />

</RelativeLayout>